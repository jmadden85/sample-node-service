{
  "name": "service-server-template",
  "version": "1.0.0",
  "main": "src/index.js",
  "engines": {
    "node": "10.16.3"
  },
  "repository": "git@github.com:jmadden85/sample-node-service.git",
  "author": "Joe Madden <joe.madden@gopetplan.com>",
  "license": "MIT",
  "scripts": {
    "watch": "tsc -w --preserveWatchOutput",
